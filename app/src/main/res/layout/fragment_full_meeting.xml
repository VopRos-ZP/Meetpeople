<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <RelativeLayout
        android:id="@+id/ll_authorInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="7dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            app:roundPercent="1"
            app:srcCompat="@drawable/test_ava_2" />

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="7dp"
            android:layout_toEndOf="@id/icon"
            android:textSize="13sp"
            tools:text="Иван Иванов" />

        <TextView
            android:id="@+id/tv_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tv_userName"
            android:textColor="#aaa"
            android:textSize="13sp"
            tools:text="приглашает" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="123"
            android:textColor="@color/darkText_disableEmphasis"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/icon_views"
            app:drawableTint="@color/darkText_disableEmphasis" />

    </RelativeLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        app:dividerColor="@color/divider"
        app:dividerThickness="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_authorInfo" />

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="с девушкой"
            android:textColor="@color/darkText_disableEmphasis"
            android:textSize="12sp"
            app:chipBackgroundColor="#fce4ec"
            app:chipEndPadding="4dp"
            app:chipIcon="@drawable/icon_groups"
            app:chipIconTint="@color/darkText_disableEmphasis"
            app:chipStrokeWidth="0dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Хочу сходить погулять по красивой вечерней питерской набережной"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="При таком расположении, при объявлении разметки в XML-файле, элемент, на который будут ссылаться для позиционирования другие объекты представления, должен быть объявлен раньше, чем другие элементы, которые обращаются к нему по его идентификатору."
        android:textColor="@color/darkText_mediumEmphasis"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="Пн, 12 августа 2023, 13:00"
        android:textColor="@color/darkText_mediumEmphasis"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/icon_calendar"
        app:drawableTint="@color/darkText_mediumEmphasis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desc" />

    <ImageView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date" />

    <TextView
        android:id="@+id/tv_alreadyGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подтвержденные участники"
        android:textColor="@color/darkText_mediumEmphasis"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/alreadyGo"
        app:layout_constraintEnd_toEndOf="@id/alreadyGo"
        app:layout_constraintStart_toStartOf="@id/alreadyGo" />

    <RelativeLayout
        android:id="@+id/alreadyGo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toStartOf="@id/wantGo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            app:roundPercent="1"
            app:srcCompat="@drawable/test_ava" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            app:roundPercent="1"
            app:srcCompat="@drawable/test_ava_2" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            app:roundPercent="1"
            app:srcCompat="@drawable/test_ava_3" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_wantGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Хотят пойти"
        android:textColor="@color/darkText_mediumEmphasis"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/wantGo"
        app:layout_constraintEnd_toEndOf="@id/wantGo"
        app:layout_constraintStart_toStartOf="@id/wantGo" />

    <RelativeLayout
        android:id="@+id/wantGo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/alreadyGo"
        app:layout_constraintTop_toBottomOf="@id/map">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            app:roundPercent="1"
            app:srcCompat="@drawable/test_ava" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            app:roundPercent="1"
            app:srcCompat="@drawable/test_ava_2" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            app:roundPercent="1"
            app:srcCompat="@drawable/test_ava_3" />

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/main"
        android:text="Хочу присоединиться"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alreadyGo" />

    <TextView
        android:id="@+id/comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#eaeaea"
        android:padding="10dp"
        android:text="Комментарии"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/connect" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commentsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comments"
        tools:listitem="@layout/comment_card" />

</androidx.constraintlayout.widget.ConstraintLayout>